generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model article {
  id          String   @id
  title       String
  description String
  type        String
  content     String
  status      String
  created_at  DateTime @default(now())
  updated_at  DateTime
}

model sensitiveword {
  id         String   @id
  word       String   @unique(map: "SensitiveWord_word_key")
  created_at DateTime @default(now())
  updated_at DateTime
  type       String?
}
