generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model SensitiveWord {
  id         String   @id @default(cuid())
  word       String   @unique
  category   String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Article {
  id          String   @id @default(cuid())
  title       String
  description String
  type        String
  content     String
  status      String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}
